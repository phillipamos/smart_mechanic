<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/fail"
        android:id="@+id/textView_successful" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton_fail_back"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView_successful"
        android:layout_alignStart="@+id/textView_successful" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try again?"
        android:textSize="25sp"
        android:id="@+id/textView_tryAgain"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/imageButton_fail_back"
        android:layout_alignLeft="@+id/imageButton_fail_back"
        android:layout_alignStart="@+id/imageButton_fail_back" />


</RelativeLayout>