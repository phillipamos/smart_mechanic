<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.smart_mechanic.smartmechanic.SoundLocationActivity">

    <TextView
        android:text="@string/location_of_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:paddingBottom="30dp"
        android:id="@+id/textView_location_of_sound" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_start"

        android:layout_marginTop="83dp"
        android:id="@+id/textView"
        android:layout_below="@+id/radio_button_location"
        android:layout_alignLeft="@+id/textView_location_of_sound"
        android:layout_alignStart="@+id/textView_location_of_sound" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_start"
        android:layout_marginTop="86dp"
        android:src="@drawable/ic_mic_black_24dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView_location_of_sound"
        android:layout_alignEnd="@+id/textView_location_of_sound" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageButton_back"
        android:src="@drawable/ic_arrow_back_black_24dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_location_of_sound"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/radio_button_location">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Front"
            android:id="@+id/radioButton_front"
            android:checked="false"
            android:paddingRight="45dp"/>



        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mid"
            android:id="@+id/radioButton_mid"
            android:checked="false"
            android:paddingRight="45dp"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rear"
            android:id="@+id/radioButton_rear"
            android:checked="false"
            />
    </RadioGroup>

</RelativeLayout>
